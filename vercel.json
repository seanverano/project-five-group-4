{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "buildCommand": "npm run build",
      "outputDirectory": "frontend/dist"
    },
    {
      "src": "api/auth.js",
      "use": "@vercel/node"
    },
    {
      "src": "api/interviews.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/v1/auth/(.*)",
      "destination": "/api/auth.js"
    },
    {
      "source": "/api/v1/interviews/(.*)",
      "destination": "/api/interviews.js"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/index.html"
    }
  ]
}
