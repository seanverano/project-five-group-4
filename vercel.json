{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist" }
    },
    {
      "src": "backend/auth/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend/api/index2.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/v1/auth/(.*)",
      "destination": "/backend/auth/index.js"
    },
    {
      "source": "/api/v1/interviews/(.*)",
      "destination": "/backend/api/index2.js"
    },
    {
      "source": "/api/v1/questions/(.*)",
      "destination": "/backend/api/index2.js"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/index.html"
    }
  ]
}
